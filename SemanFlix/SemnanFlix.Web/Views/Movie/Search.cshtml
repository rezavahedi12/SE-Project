@model SemnanFlix.ViewModels.Movie.MoviesViewModel

@{
    ViewData["Title"] = "Movies";
    ViewData["OnlyPurchasedMovies"] = false;
}

<div class="movie-card-container">
    <h1 class="mr-auto">@ViewData["Title"] <small>(@Model.Movies.Count)</small></h1>
    <br>

    <form asp-controller="Movie" asp-action="Search" method="post" role="form">
        <label class="control-label"> MovieNameSearch </label>
        <input type="text" name="name" class="form-control" />
        <br>
        <input type="submit" class="btn btn-primary col-md-2 col-lg-2 col-sm-2" value="Search">
    </form>

    <div class="d-flex justify-content-end mb-5">
        <br>
        <br>
        <partial name="_MovieSorter" />
    </div>

    <partial name="_MovieCardList" model="Model.Movies" />
</div>
